    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask flask-tienda-api",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "index.py",
                "FLASK_DEBUG": "1",
                "APP_SETTINGS_MODULE": "config.dev"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}